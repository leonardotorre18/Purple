---
import { Icon } from "astro-icon/components";
---

<div class="jumbotron">
    <div>
        <div>
            <span class="hyper">Xiaomi HyperAI</span>
            <h1>Xiaomi 15 Ultra</h1>
            <div class="sub">
                <p>co-engineered with</p>
                <Icon
                    name="simple-icons:leica"
                    width="24"
                    height="24"
                    class="logo-mobile"
                    class="leicalogo"
                />
            </div>
            <p>Pinnacle photography</p>
            <p>Redefining Leica optics</p>
            <button class="click">Learn More</button>
        </div>
    </div>
</div>

<style>
    .jumbotron {
        background-image: url(portada.jpg);
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center;
        padding: 120px 50px;
        object-fit: cover;
    }

    .sub {
        display: flex;
        gap: 12px;
    }
    .leicalogo {
        color: red;
    }
    .hyper {
        background-color: black;
        color: white;
        border-radius: 100px;
        font-weight: 500;
        padding: 5px 15px;
    }
    .click {
        background-color: black;
        color: white;
        border-radius: 10px;
        font-weight: 500;
        padding: 5px 15px;

    }
</style>
