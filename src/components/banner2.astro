---
interface Props {
    imgURL: string;
    title: string;
    description: string;
}
const { imgURL, title, description } = Astro.props;
---

<div>
    <img src={imgURL} alt={title} class="img"/>
    <div>
        <h3>{title}</h3>
        <p>{description}</p>
    </div>
    <div>
        <button class="button">Learn More</button>
    </div>
</div>

<style>
 .button {
    background-color:black
    color: white;
    border-radius: 10px;
    font-weight: 700;
    padding: 8px 20px;
 }
 .img{
    width:100%;
    height: 250px;
    object-fit: cover;
 }
</style>